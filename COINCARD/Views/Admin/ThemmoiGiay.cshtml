@model COINCARD.Models.GIAY

@{
    ViewBag.Title = "ThemmoiGiay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section id="PageMain">


        @using (Html.BeginForm("ThemmoiGiay", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {

            @Html.AntiForgeryToken()

            <div class="form-horizontal" style="text-align:center; padding-right:22%">
                <h2 > GIÀY</h2>

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group" >
                    Tên giày
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Tengiay)
                        @Html.ValidationMessageFor(model => model.Tengiay)
                    </div>
                </div>

                <div class="form-group">
                    Giá bán
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Giaban)
                        @Html.ValidationMessageFor(model => model.Giaban)
                    </div>
                </div>

                <div class="form-group">
                    Mô tả
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Mota)
                        @Html.ValidationMessageFor(model => model.Mota)
                    </div>
                </div>

                <div class="form-group" >
                    Size
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Size, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Size, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Ảnh bìa
                    <div class="col-md-10">
                        <input type="file" name="fileUpload" />
                        @ViewBag.Thongbao
                    </div>
                </div>

                <div class="form-group">
                    Ngày cập nhật
                    <div class="col-md-10">
                        <input type="date" name="Ngaycapnhat" />
                        @Html.ValidationMessageFor(model => model.Ngaycapnhat, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Số lượng tồn
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Soluongton, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Soluongton, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Tên thương hiệu
                    <div class="col-md-10"   style="width:128px; padding-left:300px">

                        @Html.DropDownList("MaTH")


                    </div>
                   
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
 
    <div>
        @Html.ActionLink("Back to List", "Giay")
    </div>


</section>