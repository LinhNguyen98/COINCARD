
@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section id="PageMain" class="account">
    <div style="padding-right:185px">
        <h2 style="text-align:center"> ĐĂNG KÝ THÀNH VIÊN</h2>
        <h4 style="color:red;text-align:center"> @ViewBag.Thongbao</h4>
        @using (Html.BeginForm())
            {
            @Html.ValidationSummary(true)
            <tr style=" height:40px">
                <td>Họ và tên:</td>
                <div></div>
                <td>
                    @Html.TextBox("Hoten")
                    @ViewData["Loi1"]
                </td>
                <div></div>

            </tr>
            <tr style="height:40px">
                <td>Tên đăng nhập:</td>
                <div></div>

                <td>
                    @Html.TextBox("Taikhoan")
                    @ViewData["Loi2"]
                </td>
                <div></div>

            </tr>
            <tr style="height:40px">
                <td>Mật khẩu:</td>
                <div></div>

                <td>
                    @Html.Password("Matkhau")
                    @ViewData["Loi3"]
                </td>
                <div></div>

            </tr>
            <tr style="height:40px">
                <td>Nhập lại mật khẩu:</td>
                <div></div>

                <td>
                    @Html.Password("Nhaplaimatkhau")
                    @ViewData["Loi4"]

                </td>
                <div></div>

            </tr>
                <tr style="height:40px">
                    <td>Địa chỉ:</td>
                    <div></div>

                    <td>
                        @Html.TextBox("Diachi")
                        @ViewData["Loi5"]
                    </td>
                    <div></div>

                </tr>
                <tr style="height:40px">
                    <td>Email:</td>
                    <div></div>

                    <td>
                        @Html.TextBox("Email")
                        @ViewData["Loi6"]
                    </td>
                    <div></div>

                </tr>
                <tr style="height:40px">
                    <td>Điện thoại:</td>
                    <div></div>

                    <td>
                        @Html.TextBox("Dienthoai")
                        @ViewData["Loi7"]
                    </td>
                    <div></div>

                </tr>
                <tr style="height:40px">
                    <td>Ngày sinh:</td>
                    <div></div>

                    <td>
                        <input type="date" name="Ngaysinh" />
                    </td>
                    <div></div>

                </tr>
                <tr style="height:40px">
                    <td></td>
                    <td>
                        <input type="submit" value="Đăng ký" />
                    </td>
                </tr>
        }
    </div>
</section>