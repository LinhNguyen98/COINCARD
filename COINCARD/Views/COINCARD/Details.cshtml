        <section id="product-1018720577" class="right-description content_side mt20">
           
            <div class="right-ipad">

                <div class="mobile-sec">
                    <h2 class="product-title">
                        @Model.Tengiay
                    </h2>
                    <div class="clearboth"></div>
                    <h3>
