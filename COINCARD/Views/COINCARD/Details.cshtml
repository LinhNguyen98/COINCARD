@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="product-right">
  
    <section id="ProductMain">
        <section class="product_imgs clearfix hide-on-mobile">

            <div class="left-image-prod" >
